@model greenswamp.Models.ViewModels.Register
@{
    ViewData["Title"] = "Register";
    ViewData["Subtitle"] = "Join the pond community";
    Layout = "_ViewsLayout";
}

<!-- Registration Card -->
<div class="max-w-2xl mx-auto bg-white rounded-2xl shadow-lg p-8 sm:p-12 border border-swamp-100">
    <form asp-action="Register" asp-controller="Account" method="post" class="space-y-8">
    @Html.AntiForgeryToken()
    <!-- Validation Summary -->
    @if (!ViewData.ModelState.IsValid)
    {
        <div class="text-red-600 text-sm">
        @Html.ValidationSummary(true, "", new { @class = "text-red-600" })
        </div>
    }

    <!-- Full Name Input -->
    <div class="space-y-2">
        <label asp-for="FullName" class="block text-base font-semibold text-swamp-900"></label>
        <input asp-for="FullName" name="FullName" type="text" required 
                class="mt-1 block w-full rounded-xl bg-white px-5 py-3.5
                        border border-swamp-200 focus:border-swamp-400 
                        focus:ring-2 focus:ring-swamp-200 placeholder-slate-400
                        text-slate-900 shadow-sm"
                placeholder="Princess Toadstool">
        <span asp-validation-for="FullName" class="text-red-600 text-sm"></span>
    </div>

    <!-- Username Input -->
    <div class="space-y-2">
        <label asp-for="Username" class="block text-base font-semibold text-swamp-900"></label>
        <input asp-for="Username" name="Username" type="text" required 
                class="mt-1 block w-full rounded-xl bg-white px-5 py-3.5
                        border border-swamp-200 focus:border-swamp-400 
                        focus:ring-2 focus:ring-swamp-200 placeholder-slate-400
                        text-slate-900 shadow-sm"
                placeholder="toadstool123">
        <span asp-validation-for="Username" class="text-red-600 text-sm"></span>
    </div>

    <!-- Email Input -->
    <div class="space-y-2">
        <label asp-for="Email" class="block text-base font-semibold text-swamp-900"></label>
        <input asp-for="Email" name="Email" type="email" required 
                class="mt-1 block w-full rounded-xl bg-white px-5 py-3.5
                        border border-swamp-200 focus:border-swamp-400 
                        focus:ring-2 focus:ring-swamp-200 placeholder-slate-400
                        text-slate-900 shadow-sm"
                placeholder="you@example.com">
        <span asp-validation-for="Email" class="text-red-600 text-sm"></span>
    </div>

    <!-- Password Input -->
    <div class="space-y-2">
        <label asp-for="Password" class="block text-base font-semibold text-swamp-900"></label>
        <input asp-for="Password" name="Password" type="password" required 
                class="mt-1 block w-full rounded-xl bg-white px-5 py-3.5
                        border border-swamp-200 focus:border-swamp-400 
                        focus:ring-2 focus:ring-swamp-200 placeholder-slate-400
                        text-slate-900 shadow-sm"
                placeholder="••••••••">
        <span asp-validation-for="Password" class="text-red-600 text-sm"></span>
    </div>

    <!-- Confirm Password Input -->
    <div class="space-y-2">
        <label asp-for="ConfirmPassword" class="block text-base font-semibold text-swamp-900"></label>
        <input asp-for="ConfirmPassword" name="ConfirmPassword" type="password" required 
                class="mt-1 block w-full rounded-xl bg-white px-5 py-3.5
                        border border-swamp-200 focus:border-swamp-400 
                        focus:ring-2 focus:ring-swamp-200 placeholder-slate-400
                        text-slate-900 shadow-sm"
                placeholder="••••••••">
        <span asp-validation-for="ConfirmPassword" class="text-red-600 text-sm"></span>
    </div>

    <!-- Submit Button -->
    <button type="submit" 
            class="w-full bg-gradient-to-br from-swamp-500 to-swamp-600 text-white 
                    py-4 px-6 rounded-xl hover:from-swamp-600 hover:to-swamp-700 
                    focus:ring-2 focus:ring-swamp-400 font-semibold
                    transition-all duration-200 shadow-lg">
        Create Account
    </button>

    <!-- Login Link -->
    <p class="text-center text-swamp-700 mt-8">
        Already have an account? 
        <a href="/account/login" class="font-semibold text-swamp-800 hover:text-swamp-900 underline">
            Log in here
        </a>
    </p>
</form>
</div>
