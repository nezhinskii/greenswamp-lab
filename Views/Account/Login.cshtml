@model greenswamp.Models.ViewModels.Login
@{
    ViewData["Title"] = "Login";
    ViewData["Subtitle"] = "Welcome back to the pond";
    Layout = "_ViewsLayout";
}


<!-- Login Card -->
<div class="max-w-md mx-auto bg-white rounded-2xl shadow-lg p-8 sm:p-12 border border-swamp-100">
    <form asp-action="Login" asp-controller="Account" method="post" class="space-y-8">
    @Html.AntiForgeryToken()
    <!-- Hidden ReturnUrl field -->
    <input type="hidden" asp-for="ReturnUrl" />

    <!-- Validation Summary -->
    @if (!ViewData.ModelState.IsValid)
    {
        <div class="text-red-600 text-sm">
        @Html.ValidationSummary(true, "", new { @class = "text-red-600" })
        </div>
    }

    <!-- Email Input -->
    <div class="space-y-2">
        <label asp-for="Email" class="block text-base font-semibold text-swamp-900"></label>
        <input asp-for="Email" name="Email" type="email" required 
                class="mt-1 block w-full rounded-xl bg-white px-5 py-3.5
                        border border-swamp-200 focus:border-swamp-400 
                        focus:ring-2 focus:ring-swamp-200 placeholder-slate-400
                        text-slate-900 shadow-sm"
                placeholder="you@example.com">
        <span asp-validation-for="Email" class="text-red-600 text-sm"></span>
    </div>

    <!-- Password Input -->
    <div class="space-y-2">
        <label asp-for="Password" class="block text-base font-semibold text-swamp-900"></label>
        <input asp-for="Password" name="Password" type="password" required 
                class="mt-1 block w-full rounded-xl bg-white px-5 py-3.5
                        border border-swamp-200 focus:border-swamp-400 
                        focus:ring-2 focus:ring-swamp-200 placeholder-slate-400
                        text-slate-900 shadow-sm"
                placeholder="••••••••">
        <span asp-validation-for="Password" class="text-red-600 text-sm"></span>
    </div>

    <!-- Remember Me & Forgot Password -->
    <div class="flex items-center justify-between">
        <label class="flex items-center space-x-2 text-swamp-700">
            <input asp-for="RememberMe" name="RememberMe" type="checkbox" class="rounded border-swamp-300 text-swamp-600 focus:ring-swamp-400">
            <span>Remember me</span>
        </label>
        <a href="#" class="text-swamp-700 hover:text-swamp-900 hover:underline text-sm">
            Forgot password?
        </a>
    </div>

    <!-- Submit Button -->
    <button type="submit" 
            class="w-full bg-gradient-to-br from-swamp-500 to-swamp-600 text-white 
                    py-4 px-6 rounded-xl hover:from-swamp-600 hover:to-swamp-700 
                    focus:ring-2 focus:ring-swamp-400 font-semibold
                    transition-all duration-200 shadow-lg">
        Log In
    </button>

    <!-- Registration Link -->
    <p class="text-center text-swamp-700 mt-8">
        New to Greenswamp? 
        <a href="/account/register" class="font-semibold text-swamp-800 hover:text-swamp-900 underline">
            Create account
        </a>
    </p>
</form>
</div>