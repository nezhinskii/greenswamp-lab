<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Greenswamp</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        swamp: {
                            50: '#f0fdf4',
                            100: '#dcfce7',
                            200: '#bbf7d0',
                            300: '#86efac',
                            400: '#4ade80',
                            500: '#22c55e',
                            600: '#16a34a',
                            700: '#15803d',
                            800: '#166534',
                            900: '#14532d',
                        }
                    }
                }
            }
        }
    </script>
    <style>
        .swamp-bg {
            background-image: url('/images/istockphoto-1464399789-1024x1024.jpg');
            background-repeat: repeat-x;
            background-size: auto 100%;
            background-position: center top;
            opacity: 1;
        }
    </style>
</head>
<body class="bg-swamp-50 min-h-screen relative">
    <!-- Background overlay -->
    <div class="fixed inset-0 swamp-bg -z-10"></div>
    <div class="absolute inset-0 bg-gradient-to-b from-swamp-50/90 to-swamp-100/60 z-0"></div>

    <!-- Content container -->
    <div class="relative z-10">
        <!-- Main Container -->
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
            <!-- Logo Header -->
            <div class="text-center mb-16">
                <div class="flex items-center justify-center space-x-3 mb-6">
                    <img src="/images/green-toad-logo.svg" alt="Greenswamp Logo" class="h-16 w-16">
                    <span class="text-4xl font-bold text-swamp-900">Greenswamp</span>
                </div>
                <p class="text-lg text-swamp-800">@ViewData["Subtitle"]</p>
            </div>

            <!-- Page Content -->
            @RenderBody()

            <!-- Footer Links -->
            <div class="mt-16 text-center">
                <div class="flex items-center justify-center space-x-4 text-swamp-700">
                    <a href="/pPrivacy" class="hover:text-swamp-900 hover:underline">Privacy</a>
                    <span class="text-swamp-500">•</span>
                    <a href="/tos" class="hover:text-swamp-900 hover:underline">Terms</a>
                    <span class="text-swamp-500">•</span>
                    <a href="/contact" class="hover:text-swamp-900 hover:underline">Contact</a>
                </div>
            </div>
        </div>
    </div>

    @RenderSection("Scripts", required: false)
</body>
</html>